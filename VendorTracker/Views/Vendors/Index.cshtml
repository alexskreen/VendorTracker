@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Active Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You have no active vendors</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>Add a vendor</a></p>
<p><a href='/'>Home</a></p>